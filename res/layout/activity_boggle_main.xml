<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Bogglemain" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:columnCount="4"
        android:rowCount="4" >

        <EditText
            android:id="@+id/editText1"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:inputType = "text"
            android:text = "a" />

        <EditText
            android:id="@+id/editText2"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "b" />

        <EditText
            android:id="@+id/editText3"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "c" />

        <EditText
            android:id="@+id/editText4"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "d" />

        <EditText
            android:id="@+id/editText5"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "e" />

        <EditText
            android:id="@+id/editText6"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "f" />

        <EditText
            android:id="@+id/editText7"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "g" />

        <EditText
            android:id="@+id/editText8"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "h" />

        <EditText
            android:id="@+id/editText9"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "i" />

        <EditText
            android:id="@+id/editText11"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text" 
            android:text = "j" />

        <EditText
            android:id="@+id/editText12"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "k" />

        <EditText
            android:id="@+id/editText13"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "l" />

        <EditText
            android:id="@+id/editText14"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "m" />

        <EditText
            android:id="@+id/editText15"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "n" />
        

        <EditText
            android:id="@+id/editText16"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "o" />

        <EditText 
            android:id="@+id/editText17"
            android:layout_gravity="fill_horizontal"
            android:maxLength="1"
            android:inputType = "text"
            android:text = "p" />

    </GridLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:onClick="findWordsMain"
        android:text= "@string/submit" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_below="@+id/gridLayout1"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="none" />

    <EditText
        android:id="@+id/editText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText10"
        android:layout_below="@+id/editText10"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText18"
        android:layout_below="@+id/editText18"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>